{
  "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": false,
      "declaration": true,
      "removeComments": false,
      "types": ["reflect-metadata"],
      "outDir": "lib"
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*", "test/*.ts"],
  "exclude": ["node_modules", "src/**/flycheck*"]
}
